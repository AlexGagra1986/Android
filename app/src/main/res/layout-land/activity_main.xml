<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/text"
        android:layout_width="665dp"
        android:layout_height="89dp"
        android:layout_centerHorizontal="true"
        android:background="@color/creame"
        android:gravity="right|center_vertical"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:textSize="60dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutSpecial"
        android:layout_width="231dp"
        android:layout_height="164dp"
        android:layout_marginEnd="212dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.655">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ac"
            style="@style/HorizontSpecialButton"
            android:text="@string/ac"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/plusMinus"
            style="@style/HorizontSpecialButton"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:text="@string/plusMinus"
            app:layout_constraintStart_toEndOf="@+id/prosent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/prosent"
            style="@style/HorizontSpecialButton"
            android:layout_marginStart="20dp"
            android:layout_marginTop="164dp"
            android:text="@string/procent"
            app:layout_constraintStart_toEndOf="@+id/ac"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/division"
            style="@style/HorizontSpecialButton"
            android:layout_marginTop="20dp"
            android:text="@string/division"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.272"
            app:layout_constraintStart_toEndOf="@+id/plus"
            app:layout_constraintTop_toBottomOf="@+id/minus" />

        <com.google.android.material.button.MaterialButton

            android:id="@+id/multiply"
            style="@style/HorizontSpecialButton"
            android:text="@string/multiply"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/comma" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/plus"
            style="@style/HorizontSpecialButton"
            android:text="@string/plus"
            app:layout_constraintStart_toEndOf="@+id/multiply"
            app:layout_constraintTop_toBottomOf="@+id/equals" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/minus"
            style="@style/HorizontButton"
            android:layout_marginStart="12dp"
            android:layout_marginTop="28dp"
            android:text="@string/minus"
            app:layout_constraintStart_toEndOf="@+id/equals"
            app:layout_constraintTop_toBottomOf="@+id/plusMinus" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/comma"
            style="@style/HorizontSpecialButton"
            android:layout_marginTop="2dp"
            android:text="@string/comma"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ac" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/equals"
            style="@style/HorizontSpecialButton"
            android:layout_marginTop="2dp"
            android:text="@string/equally"
            app:layout_constraintStart_toEndOf="@+id/comma"
            app:layout_constraintTop_toBottomOf="@+id/prosent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="223dp"
        android:layout_height="192dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/constraintLayoutSpecial"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.735">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn7"
            style="@style/HorizontButton"
            android:text="@string/seven"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn8"
            style="@style/HorizontButton"
            android:layout_marginEnd="11dp"
            android:text="@string/eight"
            app:layout_constraintEnd_toStartOf="@+id/btn9"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn9"
            style="@style/HorizontButton"
            android:text="@string/nine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn4"
            style="@style/HorizontButton"
            android:text="@string/four"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn7" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn5"
            style="@style/HorizontButton"
            android:text="@string/five"
            app:layout_constraintStart_toEndOf="@+id/btn4"
            app:layout_constraintTop_toBottomOf="@+id/btn8" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn6"
            style="@style/HorizontButton"
            android:layout_marginTop="10dp"
            android:text="@string/six"
            app:layout_constraintStart_toEndOf="@+id/btn5"
            app:layout_constraintTop_toBottomOf="@+id/btn9" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn1"
            style="@style/HorizontButton"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:text="@string/one"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn4" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn2"
            style="@style/HorizontButton"
            android:text="@string/two"
            app:layout_constraintStart_toEndOf="@+id/btn1"
            app:layout_constraintTop_toBottomOf="@+id/btn5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn3"
            style="@style/HorizontButton"
            android:text="@string/three"
            app:layout_constraintStart_toEndOf="@+id/btn2"
            app:layout_constraintTop_toBottomOf="@+id/btn6" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/zero"
            style="@style/VerticalButtonZero"

            android:layout_width="196dp"
            android:layout_height="41dp"
            android:layout_marginTop="4dp"
            android:text="@string/zero"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn2" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>